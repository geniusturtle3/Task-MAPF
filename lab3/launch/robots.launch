<launch>
  <param name="robot_description"
    command="$(find xacro)/xacro $(find turtlebot3_description)/urdf/turtlebot3_burger.urdf.xacro" />

  <!-- BEGIN ROBOT 1-->
  <group ns="robot_1">
    <param name="tf_prefix" value="robot_1" />
    <include file="$(find lab3)/launch/one_robot.launch" >
      <arg name="init_pose" value="-x 1 -y 1 -z 0" />
      <arg name="robot_name"  value="Robot1" />
      <arg name="robottf" value="robot_1"/>
    </include>
  </group>

  <!-- BEGIN ROBOT 2-->
  <group ns="robot_2">
    <param name="tf_prefix" value="robot_2" />
    <include file="$(find lab3)/launch/one_robot.launch" >
      <arg name="init_pose" value="-x 1 -y 2 -z 0" />
      <arg name="robot_name"  value="Robot2" />
      <arg name="robottf" value="robot_2"/>
    </include>
  </group>
</launch>